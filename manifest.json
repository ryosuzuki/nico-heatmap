{
  "name": "Nico Heatmap",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Heatmap visualization for niconico video comment",
  "icons": {
    "16": "img/icon-16.png",
    "128": "img/icon-128.png"
  },

  "browser_action": {
    "default_icon": "img/icon-16.png",
    "default_title": "Nico Heatmap"
  },

  "background": {
    "scripts": [
      "js/background.js"
    ]
  },

  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]

}
